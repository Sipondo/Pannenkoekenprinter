#:kivy 1.10.0

<DrawingScreen>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                ImagedButton:
                    tool: app.toolManager.panprint
                    icon: 'resources/print.png'
                ImagedButton:
                    tool: app.toolManager.undo
                    icon: 'resources/undo.png'
                    id: undo
                    disabled: True
                ImagedButton:
                    tool: app.toolManager.redo
                    icon: 'resources/redo.png'
                    id: redo
                    disabled: True

            BoxLayout:
                orientation: 'horizontal'
                ImagedToolButton:
                    tool: app.toolManager.brush
                    icon: 'resources/brush.png'
                    state: 'down'
                ImagedToolButton:
                    tool: app.toolManager.fill
                    icon: 'resources/fill.png'
                ImagedToolButton:
                    tool: app.toolManager.erase
                    icon: 'resources/erase.png'

            BoxLayout:
                orientation: 'horizontal'
                ImagedToolButton:
                    tool: app.toolManager.line
                    icon: 'resources/line.png'
                ImagedToolButton:
                    tool: app.toolManager.circle
                    icon: 'resources/circle.png'
                ImagedToolButton:
                    tool: app.toolManager.square
                    icon: 'resources/square.png'

            BoxLayout:
                orientation: 'horizontal'
                ColoredButton:
                    color: 0
                ColoredButton:
                    color: 1
                ColoredButton:
                    color: 2
                    state: 'down'
            Slider:
                orientation: 'horizontal'
                size_hint_y: None
                height: 60

        DrawSpace:
            size_hint_x: None
            width: 600

<ImagedToolButton>:
    background_normal: 'resources/button.png'
    background_down: 'resources/button-tool-down.png'
    background_color: [.094,.094,.341,1]
    on_release: self.click()
    group: 'tool'
    allow_no_selection: False
    Image:
        source: self.parent.icon
        x: self.parent.x + 15
        y: self.parent.y + 12
        size: 110, 110

<ImagedButton>:
    background_normal: 'resources/button.png'
    background_down: 'resources/button-tool-down.png'
    background_color: [.094,.094,.341,1]
    on_release: self.click()
    Image:
        source: self.parent.icon
        x: self.parent.x + 15
        y: self.parent.y + 12
        size: 110, 110

<ColoredButton>:
    background_normal: 'resources/button.png'
    background_down: 'resources/button-color-down.png'
    background_color: self.getColor()
    on_release: self.click()
    group: 'color'
    allow_no_selection: False

<OverviewScreen>
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Hello'
            on_release: root.manager.current = 'drawing'
