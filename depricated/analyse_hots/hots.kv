#:kivy 1.0.9

<HotsAnalyse>:
    canvas:
        Color:
            rgba: .5, .6, .4, 0.6
        Rectangle:
            pos: 0, self.height-75
            size: self.width, 75
        Color:
            rgba: .5, .6, .8, 1
        Rectangle:
            pos: 0, 0
            size: 100, self.height
        Color:
            rgba: .8, .4, .6, 1
        Rectangle:
            pos: self.width-100, 0
            size: 100, self.height


    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"